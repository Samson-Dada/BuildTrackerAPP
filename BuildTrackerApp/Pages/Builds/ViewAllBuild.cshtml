@page "/builds/all";
@model BuildTrackerApp.Pages.Builds.ViewAllBuildModel
@{
}
<div class="pagetitle manage__build">
    <h1>Manage Build</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Build Flow</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="row">
        <div class="col-lg-10">
            <div class="row">
                @foreach (var build in Model.Builds)
                {
                    <div class="col-xxl-4">
                        <div class="card border-warning red-card">
                            <div class="card-body">
                                <h5 class="card-title">@build.Title<span>| @build.CreatedTime</span></h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-hdd-rack-fill"></i>
                                    </div>
                                    <h6 class="ps-3"><a asp-page="builds/builddetails" asp-route-id="@build.Id" class="text-dark">@build.ShortDescription</a></h6>
                                </div>
                                <div class="d-flex border-top mt-2 p-2 justify-content-between">
                                    <p class="bold">Tasks</p>
                                    <div class="d-flex">
                                        <p class="px-2">@build.OpenTask <span>Open</span></p>
                                        <p class="px-2">@build.CloseTask <span class="">Closed</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>



